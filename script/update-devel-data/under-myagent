#!/bin/sh

PROGRAM="$1"
shift
FILE=$(mktemp)
ssh-agent > $FILE
. $FILE
if [ "$(hostname)" = "borked" ]; then
    ssh-add /home/ryan52/.ssh/scp_key
elif [ "$(hostname)" = "xyzzy" ]; then
    ssh-add /home/ryan52/.ssh/freegeek-git
else
    echo "WTF is this machine?!?!"
    exit 1
fi
"$PROGRAM" "$@"
RET=$?
kill $SSH_AGENT_PID
exit $RET
