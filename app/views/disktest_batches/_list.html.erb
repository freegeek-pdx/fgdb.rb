<table>
  <tr>
    <th>Contact</th>
    <th>Name</th>
    <th>Date</th>
    <th>Record Count</th>
  </tr>

<% for disktest_batch in @disktest_batches %>
  <tr>
    <td><%=h disktest_batch.contact %></td>
    <td><%=h disktest_batch.name %></td>
    <td><%=h disktest_batch.date %></td>
    <td><%=h disktest_batch.disktest_batch_drives.count %></td>
    <td><%= link_to 'Show', {:action => "show", :id => disktest_batch.id} %></td>
    <td><%= link_to 'Edit', {:action => "edit", :id => disktest_batch.id} %></td>
    <td><%= link_to 'Delete Batch', {:action => "destroy", :id => disktest_batch.id}, :confirm => 'Finished batches should be marked finalized on the edit page. Are you sure you want to delete this batch?' %></td>
  </tr>
<% end %>
</table>
