<h2>Contributions by Cashier Report for <%= @conditions.to_s %></h2>

<%= render :partial => "form", :locals => {:name => "cashier_contributions_form"} %>

<table class="awesome" style="clear: left">
  <tr>
    <th>Cashier Name</th>
    <th>Donation Count</th>
    <th>Total Suggested</th>
    <th>Total Contributions</th>
    <th>Percentage</th>
    <th>Difference</th>
  </tr>
  <% @results.sort_by{|x| x['name']}.each do |r| %>
  <tr>
    <td><%= r['name'] %></td>
    <td><%= r['donation_count'] %></td>
    <td><%= r['total_suggested'] %></td>
    <td><%= r['total_contributions'] %></td>
    <td><%= r['percentage'] %></td>
    <td><%= r['difference'] %></td>
  </tr>
  <% end %>
</table>
