<% form_for :conditions, :url => {:action => "view"} do |f| %>
<%= f.label "report_type", "Report Type" %>
<%= f.select "report_type", @report_types.map{|x| [x,x]} %>
<%= f.label "breakdown_type", "Breakdown Type" %>
<%= f.select "breakdown_type", @breakdown_types.map{|x| [x,x]} %>
<%= f.label "start_date", "Start Date" %>
<%= calendar_box("conditions", "start_date") %>
<%= f.label "end_date", "End Date" %>
<%= calendar_box("conditions", "end_date") %>
<%= f.label "conditions" %>
<%= conditions_html("conditions", []) %>
<%= f.label "submit", "" %>
<%= f.submit "Go!" %>
<% end %>
