<%= render :partial => 'in_dev' %>

<% form_for "conditions", :url => {:action => "view"} do |f| %>
<%= f.label "report_type", "Report Type" %>
<%= f.select "report_type", ["Income"].map{|x| [x,x]} %>
<%= f.label "breakdown_type", "Breakdown Type" %>
<%= f.select "breakdown_type", ["Weekly"].map{|x| [x,x]} %>
<%= f.label "number", "Number of Breakdowns" %>
<%= f.text_field "number" %>
<%= f.label "start_date", "Start Date" %>
<%= calendar_box("conditions", "start_date") %>
<%= f.label "submit", "" %>
<%= f.submit "Go!" %>
<% end %>
