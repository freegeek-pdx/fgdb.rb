<h2>Listing weekdays</h2>

<table>
  <tr>
  <% for column in Weekday.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  <th colspan="3">&nbsp;</th>
  </tr>
  
<% for weekday in @weekdays %>
  <tr>
  <% for column in Weekday.content_columns %>
    <td><%=h weekday.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => weekday %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => weekday %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @weekdays %>

